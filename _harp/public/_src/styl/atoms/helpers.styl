.section__block {
  width: 100%;
  margin: 0 auto;
  padding: 10% 15%;
  min-height: 100vh;
  box-sizing: border-box;
  position: relative;
}

.section__home {
  width: 100%;
  margin: 0 auto;
  padding: 10% 15%;
  min-height: calc(100vh + 86px);
  box-sizing: border-box;
  position: relative;
  //@extend .section--block;
  //background: $primary-color;
  background: url('../img/home-bg1.jpg');
  background-size: cover;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.section__about {
  width: 100%;
  margin: 0 auto;
  padding: 10% 15%;
  min-height: 100vh;
  box-sizing: border-box;
  position: relative;

  background: linear-gradient($primary-color 55%, $secondary-color);
  linear-gradient(182deg, $primary-color, $secondary-color 90%);
  //background: $secondary-color;
}





//title
.title__large
  font-family 'Roboto Condensed', Times, Georgia, serif
  font-size 3.15rem
  line-height 1
  color #fff
  text-align center
  font-weight 300
  text-transform uppercase
  margin-top 15%
  margin-bottom 0


.title--glitch
  //font-family: 'Playfair Display',Times,Georgia,serif;
  font-style normal
  line-height: 1
  color #fff
  position relative;
  z-index 1

  &:after, &:before
    content attr(data-title)
    position absolute
    //top: 22px;
    left 0
    height 100%
    width 100%
    //visibility: hidden;
    line-height 1

  &:after
    -webkit-animation glitch 4s cubic-bezier(.25,.46,.45,.94) reverse infinite // hide 10s linear infinite
    animation glitch 4s cubic-bezier(.25, .46, .45, .94) reverse infinite // hide 10s linear infinite
    color #f0f
    z-index -1

  &:before
    -webkit-animation: glitch 4s cubic-bezier(.25,.46,.45,.94) infinite // hide 10s linear infinite;
    animation: glitch 4s cubic-bezier(.25, .46, .45, .94) infinite // hide 10s linear infinite
    color #0ff
    z-index -2


