.blog__link
  margin 5rem 0
  box-sizing border-box
  border 1px solid $grey-light
  max-width 100%
  display block
  border-radius 5px
  padding 4.5rem 3rem
  text-decoration none
  font-family $primary-font
  transition all .3s
  &:hover
    border-color lighten($primary-color--light, 95%)
    box-shadow 0 5px 10px lighten($primary-color--light, 90%)

.blog__title
  font-size 2.4rem
  font-weight 700
  line-height 2.8rem
  color $primary-color
  margin 10px 0

.blog__author
  font-size 1.6rem
  margin-bottom 0.5rem

.blog__text
  font-size 1.8rem
  line-height 2rem
  font-weight 400
  color $grey
