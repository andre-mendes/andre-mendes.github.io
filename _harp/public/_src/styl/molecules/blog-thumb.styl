
/*
 * Blog Thumb
 * -------------------------------------------------- */
.blog-thumb
  border-radius 5px
  box-sizing border-box
  border 1px solid $grey-light
  display block
  margin 5rem 0
  max-width 100%
  padding 4.5rem 3rem
  text-decoration none
  font-family $primary-font
  transition all .3s
  +below(sm)
    padding 4.5rem 1.5rem

  &:hover
    border-color lighten($primary-color--light, 95%)
    box-shadow: 0 5px 10px rgba(139,152,190,0.20);
    // box-shadow 0 5px 10px lighten($primary-color--light, 90%)


  /*
   * Title
   * -------------------------------------------------- */
  &__title
    font(h4, primary, bold)
    color $secondary-color
    margin 10px 0

  /*
   * Author
   * -------------------------------------------------- */
  &__author
    color $secondary-color
    font-size 1.6rem
    margin-bottom 0.5rem
    opacity 0
    visibility hidden

  /*
   * Text
   * -------------------------------------------------- */
  &__text
    font(text, primary, regular)
    color $grey
