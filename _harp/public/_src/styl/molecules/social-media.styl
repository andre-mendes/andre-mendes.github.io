
/*
 * Social media
 * -------------------------------------------------- */
.social-media
  list-style none
  margin-top 3rem
  display flex
  +below(sm)
    justify-content space-around

  /*
   * Link item
   * -------------------------------------------------- */
  &__link
    font(h3)
    color #fff
    margin-right 1.5rem
    transition color .2s
    &:hover
      color #B0976D
