 *
 * 1. Colors
 * 2. Media Queries
 * 3. Typografhy
 * ================================== */



/* -------------------------------------
 * 1. Colors
 * ---------------------------------- */

$primary-color        = #370e69;
$primary-color--light = lighten($primary-color, 15%)
$primary-color--dark  = darken($primary-color, 15%)

$secondary-color        = #425E92 // #339fcd // #294f8a // #052850 // #0c5fbf
$secondary-color--light = lighten($secondary-color, 15%)
$secondary-color--dark  = darken($secondary-color, 15%)

$helper-color = #D72323

$grey-light  = #EEEEEE
$grey        = #3A4750
$grey-dark   = #1c1d21

$text-color = #333;





/* -------------------------------------
 * 2. Media Queries
 * ---------------------------------- */

$screen-xs   = 520px  // Extra small screen / phone
$screen-sm   = 760px  // Small screen / tablet
$screen-md   = 990px  // Medium screen / desktop
$screen-lg   = 1200px // Large screen / wide desktop
$screen-xlg  = 1400px // Extra Large screen / wide desktop
$screen-xxlg = 1900px // Extra Large screen / wide desktop

// Rupture Settings
rupture.mobile-cutoff  = $screen
rupture.tablet-cutoff  = $screen-md
rupture.desktop-cutoff = $screen-lg
rupture.hd-cutoff      = $screen-xlg

rupture.scale          = 0 $screen-xs $screen-sm $screen-md $screen-lg $screen-xlg $screen-xxlg
rupture.scale-names    = '0' 'xs' 'sm' 'md' 'lg' 'xlg' 'hd'
rupture.anti-overlap   = -1px




/* -------------------------------------
 * 3. Typografhy
 * ---------------------------------- */
$primary-font            = 'Roboto Mono',Times,Georgia,serif
$primary-font--condensed = 'Roboto Condensed', Times, Georgia, serif

$secondary-font = 'Poppins', Arial
