.footer
  background-color $secondary-color--dark
  color #fff
  line-height 90px
  height 90px
  text-align center
  font-size 1.5rem
  font-family $primary-font
  position relative

  .heart
    color #FA4659
    font-size: 1.7rem;

  &:before
    @extend $diagonal-style
    transform: skewY(-2deg)
    height 58px
    top -55px
    z-index -1
    +below(xs)
      top -20px
