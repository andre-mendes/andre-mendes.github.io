.footer
  font-size 1.5rem
  height 80px
  line-height 80px
  color #fff
  background-color $secondary-color--dark
  text-align center
  position relative
  font-family $primary-font

  .heart
    color #FA4659
    font-size: 1.7rem;

  &:before
    content ''
    background-color $secondary-color--dark
    display block
    position absolute
    left 0
    right 0
    outline 1px solid transparent
    transform: skewY(-2deg)
    transform-origin 100%
    -webkit-transform-style preserve-3d
    -moz-transform-style preserve-3d
    height 58px
    top -55px
    z-index -1
    +below(sm)
      top -20px
