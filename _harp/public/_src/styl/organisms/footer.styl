.footer
  font-size 1.5rem
  height 100px
  line-height 100px
  color #fff
  background-color $primary-color
  text-align center

  position relative

  &:before
    content ''
    background-color $primary-color
    display block
    position absolute
    left 0
    right 0
    outline 1px solid transparent
    transform: skewY(-2deg)
    transform-origin 100%
    -webkit-transform-style preserve-3d
    -moz-transform-style preserve-3d
    height 30px
    box-shadow: 0 -8px 9px 0 rgba(0,0,0,0.2),0 -6px 8px 0 rgba(0,0,0,0.19)
    top -30px

