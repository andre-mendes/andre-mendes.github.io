section.section(lang='pt-br' itemscope itemtype='http://schema.org/Blog')

  header.blog
    h2.title Projects, thoughts, everything...

  for post in public.blog._data
    a.blog-thumb(href='/blog/#{ post.path }' title='Ver o post #{ post.title }')
      article
        p.blog-thumb__author(itemprop='author') Teste
        time.date(itemprop='dateCreated') #{ post.date }
        h1.blog-thumb__title(itemprop='name') #{ post.title }
        p.blog-thumb__text(itemprop='description') #{ post.description }
