doctype
html


  head
    title André Mendes - Front-end Developer

    //- Metatags
    //- ---------------------------------------
    meta(charset='utf-8')
    meta(name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1")
    meta(name="theme-color" content="#5172b0")

    if (current.path[0] == 'blog' && current.source !== 'index')
      - var postCount = 0
      for post, slug in public.blog._data
        if slug == current.source
          meta(name='description' content='#{ post.description }')
        - postCount++;
    else
      meta(name='description' content='#{ description }')


    if (current.path[0] == 'blog' && current.source !== 'index')
      - var postCount = 0
      for post, slug in public.blog._data
        if slug == current.source
          title #{post.title } | #{ site_title }

          //- Essential Meta Tags for Social Media
          //- --------------------------------------------------
          meta(property='og:title' content='#{ post.title }')
          meta(property='og:description' content='#{ post.description }')
          //- meta(property='og:image' content='http://andre-mendes.github.io/assets/img/blog/cover/#{ post.cover }')
          meta(property='og:url' content='http://andre-mendes.github.io/blog/#{ post.path }')
          meta(name='twitter:card' content='photo')
          meta(name='twitter:site' content='André Mendes - Blog')
          meta(name='twitter:title' content='#{ post.title }')
          //- meta(name='twitter:image' content='http://andre-mendes.github.io/assets/img/blog/cover/#{ post.cover }')
          meta(name='twitter:url' content='http://andre-mendes.github.io/blog/#{ post.path }')

    //- CSS
    //- ---------------------------------------
    link(href="https://fonts.googleapis.com/css?family=Roboto+Condensed:300,400,700" rel="stylesheet")
    link(href="https://fonts.googleapis.com/css?family=Roboto+Mono:300,400,700" rel="stylesheet")
    link(href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet")
    link(href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet")
    link(href="https://fonts.googleapis.com/css?family=Playfair+Display+SC:400,700" rel="stylesheet")
    link(rel="stylesheet" href="/assets/css/main.css")

    //- Manifest.json
    //- ---------------------------------------
    meta(name="mobile-web-app-capable" content="yes")
    link(rel="icon" sizes="48x48" href="/assets/img/photo.png")
    link(rel="manifest" href="/manifest.json")

    //- Google Analytics
    //- ---------------------------------------
